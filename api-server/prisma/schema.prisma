generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model project {
    id String @id @default(cuid())
    name String
    description String ?

    service Int @default(0) // 0: web, 1: worker, 2: cron
    slug String @unique
    gitUrl String

    gitBranch String ? @default("main")
    customDomain String ?
    cmd String ?

    envSecrets Json ?
    envFile String ?
    buildCmd String ?
    runCmd String ?

    status Int @default(0) // 0: pending, 1: running, 2: success, 3: failed
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}